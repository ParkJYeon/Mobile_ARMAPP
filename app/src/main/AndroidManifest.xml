<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.macaron.mobile_project">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.MainActivity" />
        <activity android:name=".Activity.PhilosophyActivity" />
        <activity android:name=".Activity.HumanitiesActivity" />
        <activity android:name=".Activity.HistoryActivity" />
        <activity android:name=".Activity.MusicActivity" />
        <activity android:name=".Activity.EconomyActivity" />
        <activity android:name=".Activity.BookMarkActivity" />
        <activity android:name=".Activity.SettingActivity" />
        <activity android:name=".Activity.InformActivity" />
        <activity android:name=".Activity.KnewledgeActivity" />
        <activity android:name=".Activity.KnewledgeBookmarkActivity" />
        <activity android:name=".Activity.PopUpActivity" android:theme="@style/Theme.AppCompat.Dialog"/>

        <receiver
            android:name=".BroadcastActivity"
            android:enabled="true"
            android:exported="true" />
        <receiver
            android:name=".TodayKnowledgeReceiver"
            android:enabled="true"
            android:exported="true"></receiver>
    </application>

</manifest>